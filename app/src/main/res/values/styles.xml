<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IndicatorsStyled" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="vpiTabPageIndicatorStyle">@style/TabPageIndicator</item>
    </style>

    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/menubg</item>
        <item name="android:textAppearance">@style/CustomTabPageIndicator.Text</item>
        <item name="android:textColor">@drawable/menutext</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:shadowColor">#009942</item>
        <item name="android:fadingEdge">vertical</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

</resources>
